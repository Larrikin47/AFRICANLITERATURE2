<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.BookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/bookCoverImageView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/book_cover_description" />

        <TextView
            android:id="@+id/bookTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Book Title"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bookAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Author Name"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bookGenreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Genre: Fiction"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/bookDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="This is a detailed description of the book, providing insights into its plot, themes, and significance in African literature. It can be a lengthy text explaining various aspects of the story and its cultural context."
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            tools:targetApi="o" />

        <!-- TODO: Add a button to "Read Book" which could launch WebViewActivity or an internal reader -->
        <Button
            android:id="@+id/readBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_book_button"
            android:layout_marginTop="24dp"
            android:visibility="gone" /> <!-- Set to visible when content is available -->

    </LinearLayout>
</ScrollView>
