<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemBookCover"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/book_cover_description"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorOnSurface"
                tools:text="Things Fall Apart" />

            <TextView
                android:id="@+id/itemBookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurfaceVariant"
                tools:text="Chinua Achebe" />

            <TextView
                android:id="@+id/itemBookGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorOnSurfaceVariant"
                tools:text="Genre: Fiction" />

            <TextView
                android:id="@+id/itemBookDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorOnSurfaceVariant"
                tools:text="A classic novel about pre-colonial Igbo life and the impact of colonialism..." />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
