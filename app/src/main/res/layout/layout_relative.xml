<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".layouts.RelativeLayoutActivity">

    <TextView
        android:id="@+id/relativeLayoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout Example"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_below="@id/relativeLayoutTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:contentDescription="Book Cover" />

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weep Not, Child"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/bookCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngũgĩ wa Thiong'o"
        android:textSize="16sp"
        android:layout_below="@id/bookTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/bookGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre: Fiction"
        android:textSize="14sp"
        android:layout_below="@id/bookAuthor"
        android:layout_alignStart="@id/bookCover"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/bookPages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pages: 160"
        android:textSize="14sp"
        android:layout_below="@id/bookAuthor"
        android:layout_alignEnd="@id/bookCover"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/readButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Sample"
        android:layout_below="@id/bookGenre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>
